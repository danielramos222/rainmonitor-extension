{
  "manifest_version": 3,
  "name": "Monitor de Chuva - Cemig",
  "version": "1.0.0",
  "description": "Monitora em background se há chuva em um raio configurável da Cemig Sede e envia notificações.",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://instarain.com.br/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Monitor de Chuva",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/rain-16.png",
    "48": "icons/rain-48.png",
    "128": "icons/rain-128.png"
  }
}
